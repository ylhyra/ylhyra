/* Container to keep footer at bottom on large screens */
#container
  display flex
  flex-direction column
  min-height 100vh

#main
  line-height: 1.37;
  width 100%
  max-width $max-width
  padding 0 30px
  margin auto
  flex 1
  display flex
  flex-direction column
  #mw-content-text
    flex 1
  @media screen and (max-width: 600px)
    padding 0 5px
