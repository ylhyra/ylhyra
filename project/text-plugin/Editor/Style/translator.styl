.translator-container
  flex 1
  display flex
  min-width 500px
  > *
    position relative
    > *
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      overflow-y auto

  /*
     ____            _             _
    / ___|___  _ __ | |_ ___ _ __ | |_
   | |   / _ \| '_ \| __/ _ \ '_ \| __|
   | |__| (_) | | | | ||  __/ | | | |_
    \____\___/|_| |_|\__\___|_| |_|\__|
  */
  .translator-content
    flex 1

    .translator-header
      padding 20px
      table
        font-size 12px
        font-weight 500
        border-collapse collapse
        td
          border 1px solid #c2c2c2
          padding 1px 3px

    .paragraph
      background white
      margin 0 4px
      font-size 14px
      line-height 2.3

    .sentence-container
      border 1px solid #ababab
      border-bottom-width 0
      &:first-child
        margin-top 5px
        border-top-left-radius 3px
        border-top-right-radius 3px
      &:last-child
        border-bottom-width 1px
        margin-bottom 4px
        border-bottom-left-radius 3px
        border-bottom-right-radius 3px
      display flex
      flex-direction row
      line-height 2.4em
      > div:first-child
        flex 1
        padding 15px

      .sentence
        flex 0.8
        font-size 12px
        line-height 17px
        background #e8e9ed
        border-left 1px solid #d4d9de
        padding 3px 6px
        border-top-right-radius 3px
        border-bottom-right-radius 3px
        b
          font-size 10px
          line-height 13px
          text-transform uppercase
          display block
          opacity 0.6
        .hidden
          opacity 0
          height 0px
          overflow hidden
        .textarea
          outline none
          margin-bottom 3px
          font-size 14px
          resize none
          box-shadow none
          &:focus
            box-shadow 0 0 0 2px #C1DFFE
            border 1px solid #006FC7
            border-radius 2px
          background white
          border 1px solid #dadada
          padding 5px 7px

      .inline-translation
        font-size 11px
        position absolute
        z-index 1
        left 1px
        white-space nowrap
        line-height 10px
        // color #466e96
        font-weight normal
        // @extends .sans-serif
        -webkit-font-smoothing subpixel-antialiased
        bottom 18px

    /*
    ____  _     _      _
   / ___|(_) __| | ___| |__   __ _ _ __
   \___ \| |/ _` |/ _ \ '_ \ / _` | '__|
    ___) | | (_| |  __/ |_) | (_| | |
   |____/|_|\__,_|\___|_.__/ \__,_|_|
    */
  .sidebar
    width 340px
    min-width 250px
    max-width 50%
    z-index 20
    background rgba(244, 244, 244, 0.73)
    border-left 1px solid #dfdfdf
    font-size 14px
    overflow-y auto
    color #383838
    font-weight 500
    font-size 13px
    .form
      padding 0
      display flex
      flex-direction column
      min-height 100%
    input[type="text"]
      font-size 13px
      padding 6px 6px
      outline none
    section
      padding 10px 12px
      margin -1px 0
      border-top 1px solid #d8d5d2
    h3
      text-align center
      text-transform uppercase
      margin-bottom 3px
    .gray
      background #e9e9e9
    kbd
      border 1px solid #adadad
      background rgba(0, 0, 0, 0.2)
      font-weight bold
      font-size 12px
      border-radius 2px
      padding 0 2px

    .suggestions
      background #d7d7d7
      font-weight 400
      h4
        font-size 12px
        text-align center
        font-weight 400
        opacity .7
      ul
        li
          padding 3px 4px
          cursor pointer
          &:hover
            background #7a9cdd
            &:active
              background #5980cc
