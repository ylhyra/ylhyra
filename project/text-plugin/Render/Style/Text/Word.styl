.word-container
  position: relative
  user-select: none
  -webkit-tap-highlight-color: transparent
  -webkit-backface-visibility: hidden
  .word
    padding: 2px 3px
    margin: -3px -4px
    // Added pixel to make up for border.
    border: 1px solid transparent
    border-radius: 2px
    z-index 1000
    &.hover
      background-color: #b3daff
      border-color: #84a3bf
      color: black
      // box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.25)
      .conversation .me &
        background: #dbebfa
        border-color: #b1cfeb
    &.audioPlaying
      color: #006dc7
      .conversation .me &
        color: white

// [assist] .word-container
.word-container
  &.difficult
    color: #919191
  &.has-inline-translation
    display: inline-block
    .word
      white-space: nowrap
  .mw-editable &.missing
    border-bottom 1px dotted #d70041
    background rgba(#ff0000, 0.1)

body.sentence-shown
  .difficult
    color: inherit !important
  .inline_translation
    display: none
