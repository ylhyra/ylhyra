.listen
	border-radius 3px
	background #e0e0e0

.audioPlayer
	display flex

	&.error
		display none

	.playButton
		position relative

		.percentage
			position absolute
			top 0
			left 0
			height 100%
			background rgba(#f4796c, .25)

	&.inline
		display inline-block
		margin-right 6px
		margin-left -4px

.audioContainer
	&[data-inline]
		display none
