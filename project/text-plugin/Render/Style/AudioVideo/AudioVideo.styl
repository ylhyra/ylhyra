/* AUDIO */
.audioPlayer
  display flex
  &.error
    display none
  &.inline
    display inline-block
    // margin-right 6px
    // margin-left 1px
    text-align center
    .playButton
      min-width: 45px;
      padding 0 3px;
  .playButton
    position relative
    padding 4px 10px
    .percentage
      position absolute
      top 0
      left 0
      height 100%
      background rgba(#f4796c, .25)

  &.video
    display block
    .playButton
      display none


.audioContainer
  &[data-inline]
    display none


/* VIDEO */
.video-container
  display flex
  background #f4f4f4
  border-radius 7px
  box-shadow 0 0 1px 0 rgba(black, 0.4), 0 2px 3px 0 rgba(black, 0.1)
  overflow hidden
  .video
    flex 1
    min-width 300px
    background black
    display flex
    flex-direction: column;
    justify-content: center;
  // .video-sidebar
  //   //
  .video-sidebar
    background inherit
    max-width: 326px;
    .video-sidebar-content
      padding: 10px 18px
      // line-height: 1.4;

      // sans-serif()
      // font-weight 500
      // p
      //   margin-block-start: 0px;
      //   margin-block-end: 5px;
      //   line-height: 1.4;
      .video-explanation
        sans-serif()
        margin-block-start: 10px;
        font-weight normal
        color #595959
        font-size 13px

  .video-header
    display flex
    align-items center
    line-height: 1.4;
    background white
    border-bottom 1px solid #dfdfdf
    padding 3px
    sans-serif()
    img
      border-radius: 100px;
    .video-author
      flex 1
      padding-left 10px
      .video-username a
        color black
        font-weight bold
      .video-handle a
        color #ababab

video
  cursor pointer
