  .article-authors {
    border-top: 2px solid #e74c3c;
    padding-top: 1em;
    // padding: inherit;

    &:after {
      content: ".";
      visibility: hidden;
      display: block;
      height: 0;
      clear: both;
    }
    h2 {
      font-size: 17px;
      letter-spacing: .05em;
      margin: 0 0 6px 0;
      text-align: left;
    }
    .user {
      display: block;
      height: 60px;
      img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        float: left;
        margin-right: 20px;
        border: 4px solid transparent;
        -webkit-transition: border-color .2s;
        transition: border-color .2s;
      }
      h3 {
        font-family: 'Archer SSm A','Archer SSm B',Georgia,serif;
        font-size: 14px;
        line-height: 20px;
        margin-top: 15px;
        border-bottom: 1px solid #e74c3c;
        display: inline-block;
        -webkit-transition: border-color .2s;
        transition: border-color .2s;
      }
      &:hover {
        img {
          border-color: #e74c3c;
        }
        h3 {
          color: #555;
        }
      }
    }
  }

  @media screen and (min-width: 550px) {
    .article-authors {
      // margin-bottom: 4em;
      h2 {
        // margin: 1em 0 2em;
      }
      .article-authors-writers {
        float: left;
      }
      .article-authors-photographers {
        float: right;
        .user.right img {
          float: right;
          margin: 0 0 0 20px;
        }
      }
    }
  }

  ::selection, ::-moz-selection {
    background: #e74c3c;
    color: #FFF;
  }

  a {
    color: inherit;
    text-decoration: none;
    -webkit-transition: all .2s;
    transition: all .2s;
  }

  img {
    max-width: 100%;
    height: auto;
  }
}
