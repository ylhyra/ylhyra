  .author {
    // position: relative;
    text-align: left;
    margin-top: -18px;
    img {
      width: 34px;
      height: 34px;
      border: 2px solid #FFF;
      border-radius: 50%;
      margin-left: 14px;
    }
    .name {
      position: absolute;
      top: 0;
      left: 46px;
      min-width: 200px;
      margin: 0 0 0 16px;
      color: #FFF;
      font-family: 'Archer SSm A','Archer SSm B',Georgia,serif;
