.flex-center
  flex 1
  display flex
  flex-direction column
  align-items center
  justify-content center

.drag-drop-prompt
  text-align center
  flex 1
  display flex
  flex-direction column
  font-size 20px
  .small.gray
    font-size 13px
    color #6b6b6b

.drag-drop-target
  padding 10px
  display inline-block
  width 60px
  position relative
  > span
    position absolute
    background: #f0f0f0;
    border: 1px solid #CBCBCB;
    box-shadow: inset 0 1px 2px 0 rgba(0,0,0,0.09)
    border-radius: 3px;
    margin: 0 2px;
    top 1px
    left 0
    right 0
    height 1.2em
.drag-drop-target-answered
  background: #f0f0f0;
  border: 1px solid #CBCBCB;
  box-shadow: inset 0 1px 2px 0 rgba(0,0,0,0.09)
  border-radius: 3px;
  padding 3px 7px
  margin 0 2px


.drag-drop-answers
  flex 1
  text-align center
  display flex

.drag-drop-object
  padding 5px 10px
  background: #F2F3FF;
  border: 1px solid #C4C9FC;
  box-shadow: 0 1px 2px 0 rgba(0,0,0,0.03);
  border-radius: 4px;
  display inline-block
  margin 5px
  cursor pointer
