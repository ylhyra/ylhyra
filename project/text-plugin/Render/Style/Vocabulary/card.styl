.card-outer-container
  flex 1
  display flex
  min-height 470px
  align-items center
  justify-content center
  flex-direction column
  margin-bottom: 20px;
  .card-container
    flex 1
    margin auto
    // position relative
    width 100%
    min-height 330px
    height 60vh
    // max-height 420px
    max-width: 400px;
    display flex
    flex-direction column
    // .card-wrapper
    //   position absolute
    //   top 0
    //   width 100%
    //   backface-visibility hidden
    //   min-height @min-height
    //   height @height
    //   max-height @max-height

  .image
    img
      max-height 300px
      width auto

.vocabulary-card
  display flex
  flex-direction column
  background #f4f4f4
  border-radius 7px
  border 2px solid transparent
  box-shadow 0 0 1px 0 rgba(black, 0.4), 0 2px 3px 0 rgba(black, 0.1)
  color black
  display flex
  flex-direction column
  height 100%
  margin auto
  overflow hidden
  padding 30px
  flex 1
  // position absolute
  top 0
  z-index 100
  width 100%
  transition
    background 0.3s ease-in-out,
    border 0.2s ease,
    box-shadow 0.2s ease,
    left 0.5s ease-in-out,
    opacity 0.5s ease-in-out,
    top 0.5s ease-in-out,
    width 0.5s ease-in-out,
    z-index 0.5s ease-in-out;
  > div:first-child:last-child
    flex 1
    display flex
    flex-direction column

  &.incorrect
    border-color #f04949
    animation shake 0.3s cubic-bezier(0.36, 0.07, 0.19, 0.97) both
    transform translate3d(black)
    backface-visibility hidden
    perspective 1000px
    background #eeeeee
  &.correct
    background #f6f6f6
    border-color #a0e477
  @media (max-width 520px)
    border-radius 9px
  > *
    opacity 1
    transition opacity 0.3s ease
  .answers
    opacity 1
    transition opacity 0.3s ease
    display: flex;
    flex 1
    border-radius: 6px;
    box-shadow: 0 1px 1px 0 rgba(0,0,0,0.05);
    // margin-top: 20px;
    &.horizontal
      flex-direction: column;
      // min-height: 140px;

  /*
    Remove padding from certain cards
  */
  &.flashcard, &.write, &.listen-and-write, &.no-padding
    padding 0
    border none


@keyframes shake {
  10% {
    transform: translate3d(-6px, 0, 0);
  }
  40% {
    transform: translate3d(5px, 0, 0);
  }
  70% {
    transform: translate3d(-2px, 0, 0);
  }
  90% {
    transform: translate3d(1px, 0, 0);
  }
}

@keyframes fadein {
    from { opacity: 0; }
    to   { opacity: 1; }
}

@keyframes mild-blink {
    0%, 100% { opacity: .85; }
    50%   { opacity: 1; }
}

@keyframes animationFrames{
  0%,40%,100% {
    transform: translate(0px,0px) rotate(0deg) ;
  }
  20% {
    transform: translate(5px,0px) rotate(0.5deg);
  }
}

.flex-center
  flex 1
  display flex
  flex-direction column
  align-items center
  justify-content center
