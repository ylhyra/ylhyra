#container
  display flex
  // flex-direction row-reverse
  flex-direction column
  min-height 100vh
  margin-top: 10px;

#sidebar
  background: #efefef;
  background: #fbfaf8;
  border-top: 1px solid gainsboro;
  font-size: small;
  padding 1em 2em
  margin-top: 21px;
  > div
    display flex
    max-width $max-width
    margin auto
    > div
      flex 1
  @media screen and (max-width: 600px)
    padding 5px
    > div
      display block
  h5
    font inherit
    font-size normal
    font-weight bold
    margin 1em 0 0 0
  .portal
    list-style none
    margin 0
    padding 0
  #free
    font-size 11px


#content
  // font-size: 17px;
  // position relative
  line-height: 1.37;
  width 100%
  max-width $max-width
  padding 0 30px
  margin auto
  flex 1
  display flex
  flex-direction column
  #mw-content-text
    flex 1
  @media screen and (max-width: 600px)
    padding 0 5px

// Articles
body
  margin auto
  max-width $max-width
  &.ns-0.action-view
    max-width 570px + 30px + 30px
    .ve-active &
      max-width $max-width

#actions

  position: absolute;
  right: 0;
  font-size small
  list-style none
  margin 0
  padding 0
  li
    // display inline-block
    margin 0 6px 0 0
    &.selected
      // display none
      a
        color #333


