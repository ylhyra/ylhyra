header
  // background #0A1029
  // background #211B37
  // background linear-gradient(to right, #5c77f7, #7654dd)
  // background linear-gradient(to right, #5c77f7, #7654dd)
  height 60px
  // border-bottom: 1px solid #ececec;
  margin-top: 14px;
  > div
    max-width $max-width
    margin auto
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding 0 30px
    height: 100%;
    #logo
      background-size: contain;
      background-repeat no-repeat
      // background url("https://ylhyra.is/images/5/5c/Ylhyra_logo.svg")
      /* Sans serif */
      background-image url("https://ylhyra.is/images/c/c8/Ylhyra_logo_dark.svg")
      width 100px
      height (@width * 29 / 89) // 29 / 89 is the image's ratio
      /* Serif */
      background-image url("https://ylhyra.is/images/d/d3/Logo_serif.svg")
      width 105px
      height (@width * 36 / 112) // 36 / 112 is the image's ratio
      display: block;
      top: -5px;
      position: relative;
    ul
      li
        display inline-block
        margin 0
        margin-left 20px
        a, a:visited
          // color white
          color black
        @media screen and (max-width: 550px)
          margin-left 9px
          font-size: 13px
    @media screen and (max-width: 550px)
      padding 0 5px
