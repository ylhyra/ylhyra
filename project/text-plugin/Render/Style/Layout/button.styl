.button-container
  display flex
  &.center
    align-items center
    justify-content center
    height 100%
a.button, .button > a
  background: #FFF5F2;
  border: 1px solid #FCC6C4;
  box-shadow: 0 1px 2px 0 rgba(0,0,0,0.03);
  border-radius: 4px;
  color #EB5757
  padding 9px 15px
  font-weight 600
  cursor pointer
  font-size 14px
  position relative
  sans-serif()
  display: inline-block;
  &:hover
    background: #FDEAE8;
    box-shadow: 0 1px 2px 0 rgba(0,0,0,0.06);
    text-decoration none
  &.small
    font-size 12px
    padding 3px 6px
  &.blue, .blue&
    border-color #C4C9FC
    background: #F2F3FF;
    color: #7791FE
    &:hover
      background: #e9eaf7;




.button-answer
  border: 1px solid #bdbdbd
  padding: 7px
  flex: 1
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  cursor: pointer
  background: white
  transition: all 0.1s ease
  min-height: 15px
  text-align: center
  box-sizing: content-box
  &:not(.answered):hover
    background: #f5f5f5

  &.horizontal
    margin-bottom: -1px
    &:first-child
      border-top-left-radius: 6px
      border-top-right-radius: 6px
    &:last-child
      border-bottom-left-radius: 6px
      border-bottom-right-radius: 6px
  &.vertical
    margin-right: -1px
    &:first-child
      border-top-left-radius: 6px
      border-bottom-left-radius: 6px
    &:last-child
      border-top-right-radius: 6px
      border-bottom-right-radius: 6px

  &.incorrect
    opacity: 0.7
    border-color: #d9d9d9
  &.selected.incorrect
    border-color: #e2423d
    background #fad1cf
    // box-shadow: inset 0 0 0 1px #e2423d
    z-index: 19
  &.correct
    background: #dcf7d7
    border-color: #82d555
    box-shadow: inset 0 0 0 3px #82d555
    z-index: 20

  .english
    font-family: Georgia, serif
  .small
    font-size: 13px
    font-style: italic
    color: #5d5d5d
    margin-top: 2px
  .parentheses
    font-size: 80%
    display: inline-block
    font-style: italic
