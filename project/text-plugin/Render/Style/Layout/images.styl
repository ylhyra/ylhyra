.thumb
  sans-serif()
  line-height 1.2
  background #f5f5f5
  border 1px solid #ddd
  .thumbinner
    box-sizing content-box
    padding 4px
    .thumbcaption
      padding 1px 0 3px 0
      font-size small
  &.tright
    margin 0 0 10px 10px
    // margin-right -200px
  &.tleft
    margin 0 10px 10px 0
