.book {
  font-size: 18px;
  line-height: 1.9em;

  /* NYTIMES STYLE */
  &.ny-times {
    font-size: 20px;
    -webkit-font-smoothing: antialiased;
    color: #111;
    line-height: 1.7;
    font-family: Georgia, serif;
    letter-spacing: 0.1px;
    font-size: 16px;
  }

  h1 {
    text-align: center;
    margin: 25px;
  }
  h2 {
    text-align: center;
    font-size: 20px;
    margin: 10px;
    font-family: sans-serif;
  }
  > div > div {
    margin-bottom: 10px;
  }
}
