{
  "rules": {
    "remove-console": "off",
    "remove-process-exit": "off",
    "convert-to-arrow-function": "off",
    "strict-mode": "off",
    "apply-destructuring/array": "off",
    "convert-for-each-to-for-of": "off",
    "convert-map-to-for-of": "off",
    "convert-array-copy-to-slice": "off",
    "remove-unused-variables": "off",
    "remove-boolean-from-assertions": "off",
    "merge-duplicate-imports": "off",
    "remove-empty/import": [
      "on",
      {
        "ignore": []
      }
    ]
  },
  "regexp/remove-useless-group": "off",
  "regexp/convert-to-string": "off",
  "regexp/optimize": "off",
  "ignore": ["src/index.js"],
  "processors": [
    ["markdown", "off"],
    ["json", "off"]
  ]
}
