#vocabulary-screen 
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  display flex
  flex-direction column
  background #242626
  align-items center
  overflow-y auto
  #vocabulary-screen-inner
    flex 1
    display flex
    flex-direction column
    width 100%
    align-items center
    padding 0 6px
    @media (max-width: 380px) {
      padding 0
    }
    > div
      max-width 480px
      width 100%
  #vocabulary-header 
    color #8c8c8c
    font-size 13px
    padding 10px 0
    display flex
    @media (max-width: 450px)
      padding 5px 0
    .spacer
      flex 1
    a,
    .link 
      color #adbfcd
      &:hover 
        color white
  #game-container 
    //padding 0 6px
    flex 1
    display flex
    flex-direction column
    // animation: fadein 0.2s
  &.select-level-screen
    color white
    #game-container
      max-width 300px
      padding 20px 0
    #select-level-screen-header
      font-size 18px
      text-align center
      margin-bottom 5px
    #select-level-buttons
      margin 10px 0
      display flex
      flex-direction column
      > button
        flex 1
        flex-basis 70px
        margin-bottom 5px
        padding 7px
        &:first-child
          //flex-basis 80px
        h3
          margin 0 0 3px 0
          font-size 15px
          span
            font-weight normal
            font-size smaller
        > div
          font-size 12px
          line-height 1.3
