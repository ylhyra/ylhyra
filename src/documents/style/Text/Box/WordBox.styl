.word-box 
  @extend .box
  padding 6px 12px
  &.shown 
    display flex
  flex-direction row
  position fixed
  bottom 0
  left 0
  right 0
  border-radius 0
  > :first-child 
    flex 1
  > span > span 
    float left
    margin 5px 0
    &:not(:last-child) 
      padding-right 16px
      margin-right 16px
      border-right 1px solid #dddddd
