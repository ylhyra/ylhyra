  clear both

button.link,
button.nostyle 
  background none
  border none
  padding none
  cursor pointer
  margin 0
  padding 0
  font-size inherit
  outline none
  -webkit-tap-highlight-color transparent
button.link:hover 
  text-decoration underline

.button-answer 
  border 1px solid #bdbdbd
  padding 7px
  flex 1
  display flex
  flex-direction column
  align-items center
  justify-content center
  cursor pointer
  background white
  transition all 0.1s ease
  min-height 15px
  text-align center
  box-sizing content-box

  &:not(.answered):hover 
    background #f5f5f5

  &.horizontal 
    margin-bottom -1px

    &:first-child 
      border-top-left-radius 6px
      border-top-right-radius 6px

    &:last-child 
      border-bottom-left-radius 6px
      border-bottom-right-radius 6px

  &.vertical 
    margin-right -1px

    &:first-child 
      border-top-left-radius 6px
      border-bottom-left-radius 6px

    &:last-child 
      border-top-right-radius 6px
      border-bottom-right-radius 6px

  &.incorrect 
    opacity 0.7
    border-color #d9d9d9

  &.selected.incorrect 
    border-color #e2423d
    background #fad1cf
    z-index 19

  &.correct 
    background #dcf7d7
    border-color #82d555
    box-shadow inset 0 0 0 3px #82d555
    z-index 20

  .english 
    serif()

  .small 
    font-size 13px
    font-style italic
    color #5d5d5d
    margin-top 2px

  .parentheses 
    font-size 80%
    display inline-block
    font-style italic
