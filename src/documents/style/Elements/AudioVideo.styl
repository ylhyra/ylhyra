      padding 10px 10px
      padding-top 30px
      .video-explanation 
        sans_serif()
        margin-block-start 10px
        font-weight normal
        color #595959
        font-size 13px
  .video-header 
    display flex
    align-items center
    line-height 1.4
    background white
    border-bottom 1px solid #dfdfdf
    padding 7px 8px
    sans_serif()

    border-top-left-radius 7px
    border-top-right-radius 7px
    box-shadow 0 0 1px 0 rgba(black, 0.4), 0 2px 3px 0 rgba(black, 0.1)

    img 
      border-radius 100px
    .video-author 
      flex 1
      padding-left 10px
      .video-username a 
        color black
        font-weight bold
      .video-handle a 
        color #ababab

video 
  cursor pointer
