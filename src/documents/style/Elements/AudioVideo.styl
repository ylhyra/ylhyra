/* AUDIO */
.audioPlayer 
  display flex
  line-height 1.2
  &.error 
    display none
  &.inline 
    display inline-block
    text-align center
    .playButton 
      min-width 45px
      padding 0 3px
  .playButton 
    position relative
    padding 4px 10px
    .percentage 
      position absolute
      top 0
      left 0
      height 100%
      background rgba(#f4796c, 0.25)
      background rgba(#7983e8, 0.25)
  &.video 
    display block
    .playButton 
      display none
.audioContainer 
  &[data-inline] 
    display none

