.underline_links 
  underline_links()
#frontpage-splash-screen 
  // margin-top: 20px
  // display: flex
  #frontpage-splash-screen-english 
    sans_serif()
    // color: #252525
    // font-size: 26px
    flex 1
    // line-height: 1.5
    // underline_links()
    // padding-top: 18px
    padding-right 19px
    min-width 200px
    a 
      border-bottom-width 2px
      color $blue
      border-bottom-color #bdbdbd
  #frontpage-splash-screen-demo 
    flex 1
    margin 0 20px
    > div 
      max-width 350px
      margin auto
      background #f7f7f6
      border 1px solid #b6b6b6
      box-shadow 0 5px 7px 0 rgba(181, 181, 181, 0.03),
        0 1px 1px 0 rgba(0, 0, 0, 0.06)
      padding 20px
      padding-top 15px
      padding-bottom 12px
      border-radius 3px
    #frontpage-splash-screen-demo-text 
      serif()
      font-size 15px
      line-height 1.96
      line-height 1.76
      margin-bottom 10px
    #frontpage-splash-screen-demo-byline 
      sans_serif()
      color #707070
      underline_links()
      font-size 13px
      text-align right

  @media screen and (max-width: 600px) 
    display block
    #frontpage-splash-screen-english 
      padding 0 0 19px 0
    #frontpage-splash-screen-demo 
      margin 0

.frontpage-button 
  sans-serif()
  text-align center
  .below-button 
    // opacity: 0.79
    color #4e4e4e
    font-size 13px

#frontpage-screen,
.frontpage-pricing > div > div 
  max-width 450px
  margin auto
  h1 
    font-size 30px
    font-weight 500
    text-align center
    span 
      border 0
  font-size 16px
  h3 
    &,
    a 
      color #7a7a7a
    font-size inherit
    font-size 17px
    margin 15px 0 5px 0
  .p 
    line-height 1.4
    font-size inherit
    letter-spacing 0
    margin 0.3em 0
    color #171717
.frontpage-pricing 
  background $lightbrown
  > div > div 
    h3 
      font-size 14px
    font-size 14px
