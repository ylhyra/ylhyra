.level
  border-radius 12px
  font-family sans-serif
  color gray
  background #ececec
  padding 2px 6px
  font-size 12px

kbd
  border 1px solid #c3c3c3
  background #f4f4f4
  border-radius 3px
  padding 0 3px
  display inline-block

#page-not-found
  text-align center
  padding-top 30px
  font-size 20px
  color #393939

.pron
  color #777777
  font-weight 200
  > span
    font-weight normal
    color #242424
    font-style italic
    border-bottom 2px solid #e8e8e8

.phrase
  padding 5px 20px
  border-left 4px solid #ebebeb
  min-width 0
  sans_serif()
  [lang="is"]
    // font-weight: 500
    // font-size: 17px
  .p
    margin 0

// label .error
//   display: inline
// }

.toc
  .toc-vocabulary-list
    color gray
    line-height 1.4
    sans_serif()
    font-size 11px
  .toc_subtitle
    font-size 13px
    font-style italic
    sans_serif()
    // font-weight: bold

  .chapter
    padding 10px 5px
    margin 0 -5px
    &:not(:first-child)
      border-top 1px solid #ededed
    display block
    background-color white
    &:hover
      text-decoration none
      background-color #f5f5f5
    &:visited:not(&:hover)
      background-color #fbfbfb
      .chapter-title
        > :first-child
          color #5c5666
  .chapter-title
    color black
    display flex
    // align-items: center
    > :first-child
      flex 1
    > :last-child
      margin-top 2px
  .link-with-percentage
    &:hover
      text-decoration none
      .chapter-title > :first-child
        text-decoration underline

