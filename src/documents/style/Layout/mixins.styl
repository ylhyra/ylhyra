$max-width = 500px
$gray = #6b6b6b
$blue = #1161d9
$lightbrown = #fbfcfd
serif() {
  font-family: /*CharisSIL,*/ Georgia, serif;
  letter-spacing: 0.005em;
}
sans_serif() {
  font-family: /*Inter V,*/ Helvetica, -apple-system, BlinkMacSystemFont, sans-serif;
  letter-spacing: 0;
}
.sans-serif 
  sans_serif()
underline_links() 
  a 
    border-bottom 1px solid #e4e4e4
    color black
    &:hover 
      text-decoration none
      border-bottom-color #a7a7a7
      color black
card_shadow() 
  box-shadow 0 0 0 1px rgba(0, 0, 0, 0.13), 0 1px 1px 0 rgba(0, 0, 0, 0.17)
  overflow hidden
notboldlink() 
  &:not(a) 
    > b 
      font-weight normal

clear_button_styles()
  background none
  border none
  padding none
  cursor pointer
  margin 0
  padding 0
  font-size inherit
  outline none
  -webkit-tap-highlight-color transparent

simple_button()
  clear_button_styles()
  background #1d4bab
  border-radius 100px
  color white
  padding 4px 9px
  box-shadow: inset 0 1px 1px 0 rgba(255, 255, 255, 0.28), inset 0 -1px 1px 0 rgba(47, 72, 128, 0.95);
  &:hover
    background #2c5cc0
    box-shadow: inset 0 1px 1px 0 rgba(255, 255, 255, 0.28), inset 0 -1px 1px 0 rgba(47, 72, 128, 0.95),0 1px 1px 0 rgba(0, 0, 0, 0.1);
.simple-button
  simple_button()

