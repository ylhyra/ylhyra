button($color, $bg, $x_axis)
  sans_serif()
  outline none
  -webkit-tap-highlight-color transparent
  color $color
  background-color $bg
  background-image linear-gradient(-180deg, rgba(white, 0.05) 0%, rgba(#c6c6c6, 0.1) 100%)
  border 1px solid rgba($color, 0.1)
  box-shadow inset $x_axis 1px 1px 0 rgba(255, 255, 255, 0.5) inset 0 0px 0px 0 rgba($color, 0.3)
  &:hover
    background-color saturate(darken($bg, 5%), 10%)
    border-top-color rgba($color, 0.25)
    color saturate(darken($color, 5%), 20%)
    box-shadow inset $x_axis 1px 1px 0 rgba(255, 255, 255, 0.5) inset 0 0px 0px 0 rgba($color, 0.3) 0 0px 1px 1px rgba(black, 0.04)
    text-decoration none
  cursor pointer
  &.selected
  &:active
    background-color darken($bg, 20%)
    border-top-color rgba($color, 0.4)
    color black
    box-shadow inset 0 1px 3px 0 rgba(0, 0, 0, 0.14)
    z-index 10
  text-decoration none
  &:visited
    color $color

.btn
  button(white, #0d85d0, 1px)
