.card 
  background white
  background #fdfdfd
  color black
  display flex
  flex-direction column
  width 100%
  card_shadow()
  border-radius 5px
  overflow hidden
  transition all 1s
  max-width 400px
  margin auto auto 20px
.conversation 
  sans_serif()
  flex 1
  overflow hidden
  font-size 14px
  background white
  > .conversationWindow 
    padding 12px 9px
  .bubbles 
    flex 1
    margin-bottom 6px
  .bubble-container 
    display flex
  .me,
  .you 
    padding 1px 0
  .you 
    .img 
      width 40px
      height 40px
      border-radius 30px
      overflow hidden
      background-position center
      background-size cover
    .bubbles 
      margin-left 6px
    .bubble-container 
      .bubble 
        border-top-right-radius 16px
        border-bottom-right-radius 16px
      &:first-of-type 
        .bubble 
          border-top-left-radius 16px
      &:last-of-type 
        .bubble 
          border-bottom-left-radius 16px
  .me 
    .bubble-container 
      flex-direction row-reverse
      .bubble 
        border-top-left-radius 16px
        border-bottom-left-radius 16px
      &:first-of-type 
        .bubble 
          border-top-right-radius 16px
      &:last-of-type 
        .bubble 
          border-bottom-right-radius 16px
    .bubble 
      background #407fff
      color white
      a 
        color white
      .reference a 
        color #cbdcff
  .bubble 
    max-width 80%
    background #eee
    padding 6px 11px
    margin-bottom 1px
    line-height 16px
    transition border-radius 0.1s ease
.response 
  text-align center
  border-top 1px solid #d6d6d6
  background #f9f9f9
  min-height 200px
  display flex
  padding 0
  > div 
    width 100%
    > div 
      height 100%
      display flex
      flex-direction column
  > div:not(.write) 
    padding 15px
  .answers-container 
    flex 1
    display flex
    flex-direction column
.conversation.interactive 
  > div 
    flex 1
