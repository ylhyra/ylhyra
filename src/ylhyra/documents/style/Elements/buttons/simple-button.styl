
.simple-button
  clear_button_styles()
  background #1d4bab
  border-radius 100px
  color white
  padding 4px 9px
  box-shadow: inset 0 1px 1px 0 rgba(255, 255, 255, 0.28), inset 0 -1px 1px 0 rgba(47, 72, 128, 0.95);
  font-size 13px
  &:hover
    background #2c5cc0
    box-shadow: inset 0 1px 1px 0 rgba(255, 255, 255, 0.28), inset 0 -1px 1px 0 rgba(47, 72, 128, 0.95),0 1px 1px 0 rgba(0, 0, 0, 0.1);
  &.gray-button
    background #8c8c8c
    box-shadow none
