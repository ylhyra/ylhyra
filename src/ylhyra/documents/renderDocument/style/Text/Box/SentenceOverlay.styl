.sentence-overlay 
  position absolute
  background white
  opacity 0.85
  display none
  z-index 15
  &.shown 
    display block

  border-bottom-left-radius 6px
  border-bottom-right-radius 6px
  box-shadow inset 0 0 0 1px white, 0 7px 18px 3px rgba(0, 0, 0, 0.05),
    0 7px 48px 3px rgba(0, 0, 0, 0.05), 0 0 0 1px rgba(0, 0, 0, 0.19),
    0 2px 4px 0 rgba(0, 0, 0, 0.09)
