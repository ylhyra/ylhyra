{
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "build",
    "node_modules",
    "./src/ylhyra/documents/render/elements/Speed_reading"
  ],
  "typeAcquisition": {
    "exclude": ["crc-32", "fast-safe-stringify"]
  },
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react-jsx",
    "target": "es6",
    "module": "commonjs",
    "outDir": "build/ts",
    "esModuleInterop": true,
    "isolatedModules": false,
    //    "forceConsistentCasingInFileNames": true,
    //    "lib": ["es2020", "dom", "es2021.String"],
    "strict": true
  },
  "compileOnSave": true
}
