{
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["build", "node_modules"],
  "typeAcquisition": {
    "exclude": ["crc-32", "fast-safe-stringify"]
  },
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react-jsx",
    "target": "es6",
    "module": "commonjs",
    "outDir": "build/ts",
    "esModuleInterop": true,
    "isolatedModules": false,
    "lib": [
      "ES2021",
      "dom"
    ]
    //  "strict": true,
  },
  "compileOnSave": true
}
