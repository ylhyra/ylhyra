{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true
  },
  "include": ["src/**/*.js", "src/**/*.ts"],
  "exclude": ["build", "node_modules"],
  "typeAcquisition": {
    "exclude": ["crc-32", "fast-safe-stringify"]
  }
}
