{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["./build", "./node_modules", "**NOT_USED**"],
  "typeAcquisition": {
    "exclude": ["crc-32", "fast-safe-stringify"]
  },
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react-jsx",
    "target": "es6",
    "module": "commonjs",
    "outDir": "build/ts",
    "esModuleInterop": true,
    "isolatedModules": false,
    "sourceMap":  true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true
  },
  "compileOnSave": true
}
