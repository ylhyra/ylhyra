sans-serif()
  font-family -apple-system,BlinkMacSystemFont,"Segoe UI",Helvetica Neue,Helvetica,Arial,sans-serif;

@import 'reset'
@import 'site/*'
@import 'inflections/*'

body
  sans-serif()
  font-size 14px
  background #fefefe

$red = #CF4A26
$blue = #266BCF


.hidden
  display none

*
  box-sizing border-box

a
  &:not(:hover)
    text-decoration none

html
  width 100%
  background #FCFCFC

body
  font-size 16px
  line-height 1.3em
  color #131313
  margin 0
  display flex
  flex-direction column
  padding 15px
  padding-bottom 10px
  min-height 100vh
  > main
    flex 1

h1, h2, h3, h4, h5, p, ul
  margin 0
  padding 0


/* _______ _ _   _
  |__   __(_) | | |
     | |   _| |_| | ___
     | |  | | __| |/ _ \
     | |  | | |_| |  __/
     |_|  |_|\__|_|\___|   */
h1
  font-weight bold
  font-size 24px
  line-height 1.1em
  text-align center
  color #000000
  margin-top 20px
  margin-bottom 10px
  display block
  font-family $serif
  color $blue
  a
    // color $red
    color $blue



/*   _____                     _        _
    / ____|                   | |      | |
   | (___   ___  __ _ _ __ ___| |__    | |__   _____  __
    \___ \ / _ \/ _` | '__/ __| '_ \   | '_ \ / _ \ \/ /
    ____) |  __/ (_| | | | (__| | | |  | |_) | (_) >  <
   |_____/ \___|\__,_|_|  \___|_| |_|  |_.__/ \___/_/\_\    */
input[type="search"]
  font-size 18px
  outline none
  border 1px solid #C2C2C2
  box-shadow inset 0px 0px 1px 0 #F2F2F2, inset 0px 1px 0px 0 #F6F6F6
  -webkit-appearance none
  $padding = 10px
  padding $padding
  border-radius 1px
  width 100%
  max-width 420px
  display block
  margin 22px auto 50px auto
  &:focus
    border 3px solid $blue
    $padding = $padding - 2
    padding $padding
    border-radius 2px


/*  _____            _        _
   / ____|          | |      (_)
  | |     ___  _ __ | |_ __ _ _ _ __   ___ _ __
  | |    / _ \| '_ \| __/ _` | | '_ \ / _ \ '__|
  | |___| (_) | | | | || (_| | | | | |  __/ |
   \_____\___/|_| |_|\__\__,_|_|_| |_|\___|_|   */
main
  // display flex
  max-width 650px
  margin auto
  min-width: calc(min(100vw,500px));
main a
  color black
  &:hover
    color $blue
    text-decoration underline



/*  ______          _
   |  ____|        | |
   | |__ ___   ___ | |_ ___ _ __
   |  __/ _ \ / _ \| __/ _ \ '__|
   | | | (_) | (_) | ||  __/ |
   |_|  \___/ \___/ \__\___|_|   */
footer
  margin-top 100px
  a
    color $blue

.gray
  color #7d7d7d
  a&:not(:hover)
    color @color
  a&:hover
    color $blue

.did-you-mean
  font-size: 14px;
  margin: 21px 0 8px 0;
  font-weight: normal;
